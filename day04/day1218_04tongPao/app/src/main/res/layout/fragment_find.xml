<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FindFragment"
    android:orientation="vertical"
    android:background="#A8A8A8">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/iv_head1"
            android:layout_width="100dp"
            android:layout_height="100dp"
           />
        <TextView
            android:id="@+id/tv_cloth"
            android:gravity="center"
            android:text="袍子"
            android:layout_width="100dp"
            android:layout_height="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/iv_head2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <TextView
            android:id="@+id/tv_community"
            android:text="社团"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/iv_head3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <TextView
            android:id="@+id/tv_ranking"
            android:text="排行榜"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="20dp"/>

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_hor"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#FFF59B"
           />

    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"/>

</LinearLayout>