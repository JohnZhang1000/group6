<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/car"
        android:layout_width="@dimen/x348"
        android:layout_height="@dimen/x144">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/x348"
                android:layout_height="@dimen/x144"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="@dimen/x348"
        android:layout_height="@dimen/y96"
        android:layout_below="@+id/car"
        android:layout_marginTop="@dimen/x20">

        <ImageView
            android:id="@+id/iv_tuijian"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_feihua"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_shequn"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_paihang"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_top"
        android:orientation="horizontal"
        android:id="@+id/ll_text"
        android:layout_width="@dimen/x348"
        android:layout_height="@dimen/y36">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/x12"
            android:text="每日推荐"
            android:layout_height="@dimen/y20"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/x12"
            android:text="飞花令"
            android:layout_height="@dimen/y20"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/x12"
            android:text="诗歌社群"
            android:layout_height="@dimen/y20"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/x12"
            android:text="排行榜"
            android:layout_height="@dimen/y20"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/x12"
            android:text="会员专区"
            android:layout_height="@dimen/y20"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_below="@+id/ll_text"
        android:layout_width="@dimen/x348"
        android:layout_height="@dimen/y60">
        <TextView
            android:textSize="@dimen/x22"
            android:layout_width="wrap_content"
            android:text="诗歌社区PK"
            android:layout_height="@dimen/y25"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_time"
            android:textSize="@dimen/x14"
            android:text="12-20日下午8:00开始"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y25"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_top"
        android:layout_width="@dimen/x348"
        android:layout_height="@dimen/y248">
        <ImageView
            android:id="@+id/iv_hader1"
            android:layout_marginLeft="@dimen/x60"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y46"/>
        <ImageView
            android:id="@+id/iv_hader2"
            android:layout_marginRight="@dimen/x60"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y46"/>
        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_marginTop="@dimen/x22"
            android:layout_width="@dimen/x348"
            android:layout_height="@dimen/y137" >
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/yinghua1"
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/x171"
                android:layout_height="@dimen/y134"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:id="@+id/yinghua2"
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/x171"
                android:layout_height="@dimen/y134"/>
            <Button
                android:gravity="center_horizontal"
                android:layout_below="@+id/yinghua1"
                android:id="@+id/bt_yuyue"
                android:layout_width="@dimen/x344"
                android:text="预约"
                android:textSize="@dimen/x16"
                android:layout_height="@dimen/y26"/>
        </RelativeLayout>

        <Button
            android:id="@+id/bt2"
            android:layout_marginTop="@dimen/x22"
            android:layout_below="@+id/rl_2"
            android:layout_width="@dimen/x77"
            android:text="樱花诗社"
            android:textSize="@dimen/x14"
            android:background="#71F3E7"
            android:layout_height="@dimen/y26"/>
        <Button
            android:id="@+id/bt1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x22"
            android:layout_below="@+id/rl_2"
            android:layout_width="@dimen/x77"
            android:text="樱花诗社"
            android:background="#C85935"
            android:textSize="@dimen/x14"
            android:layout_height="@dimen/y26"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_below="@+id/bt1"
            android:textSize="@dimen/x17"
            android:text="这两个诗社你更看好谁"
            android:layout_width="@dimen/x348"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>