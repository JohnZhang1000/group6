<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_163"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_15"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_rcy6_img"
            android:src="@drawable/zhou1"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="@dimen/dp_163"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/iv_rcy6_img"
            android:id="@+id/tv_biaoti"
            android:gravity="center"
            android:text="谁道碎叶不似星"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColorLink="@color/colorPrimary"
            android:singleLine="false"
            android:layout_below="@id/tv_biaoti"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="有没有\n走不散的情人?\n有没有\n···"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>