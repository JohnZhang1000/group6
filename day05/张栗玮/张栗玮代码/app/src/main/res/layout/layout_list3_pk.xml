<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18">
        <TextView
            android:text="诗歌群PK"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_18"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_120"
            android:text="08-01日晚8：00开始"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_13"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_170">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_horizontal">
        <Button
            android:text="丁香诗社"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_30"/>
        <Button
            android:text="月季诗社"
            android:layout_marginLeft="@dimen/dp_133"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_30"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_14">
        <TextView
            android:text="这两个诗社你更看好谁"
            android:layout_width="@dimen/dp_134"
            android:layout_height="@dimen/dp_14"/>
    </LinearLayout>

</LinearLayout>