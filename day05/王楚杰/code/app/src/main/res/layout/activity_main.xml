<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="@dimen/x527"
            android:layout_height="@dimen/x75"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginTop="@dimen/x16"
            android:background="@drawable/search_shap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="搜索使人名字 诗歌关键字" />

        <ImageView
            android:id="@+id/iva"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/aaa"
            app:layout_constraintLeft_toRightOf="@+id/search"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/bbb"
            app:layout_constraintLeft_toRightOf="@+id/iva"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivb"
            android:layout_width="@dimen/dp_339"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@mipmap/ccc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search" />


        <LinearLayout
            android:id="@+id/lla"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_33"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivb">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_46"
                android:layout_weight="1"
                android:src="@mipmap/tj" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_46"
                android:layout_weight="1"
                android:src="@mipmap/fh" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_46"
                android:layout_weight="1"
                android:src="@mipmap/ph" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_46"
                android:layout_weight="1"
                android:src="@mipmap/sg" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_46"
                android:layout_weight="1"
                android:src="@mipmap/hy" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llb"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lla">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="每日推荐"
                android:textSize="@dimen/dp_11" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="飞花令"
                android:textSize="@dimen/dp_11" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="诗歌社群"
                android:textSize="@dimen/dp_11" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="排行榜"
                android:textSize="@dimen/dp_11" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="会员专区"
                android:textSize="@dimen/dp_11" />

        </LinearLayout>

        <TextView
            android:id="@+id/tva"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_34"
            android:text="诗歌群PK"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llb" />

        <TextView
            android:layout_width="@dimen/dp_117"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_141"
            android:layout_marginTop="@dimen/dp_40"
            android:text="08-01日晚8:00开始"
            app:layout_constraintLeft_toRightOf="@+id/tva"
            app:layout_constraintTop_toBottomOf="@+id/llb" />

        <ImageView
            android:id="@+id/ivc"
            android:layout_width="@dimen/dp_339"
            android:layout_height="@dimen/dp_169"
            android:layout_marginTop="@dimen/dp_21"
            android:src="@mipmap/ddd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tva" />

        <Button
            android:id="@+id/buta"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/shop"
            android:text="丁香诗社"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivc" />

        <Button
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_135"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/shopa"
            android:text="月季诗社"
            app:layout_constraintLeft_toRightOf="@+id/buta"
            app:layout_constraintTop_toBottomOf="@+id/ivc" />

        <TextView
            android:id="@+id/tvb"
            android:layout_width="@dimen/dp_134"
            android:layout_height="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_14"
            android:text="这两个诗社你更看好谁"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buta" />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#f5f5f5"
            app:layout_constraintTop_toBottomOf="@+id/tvb" />

        <TextView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_30"
            android:text="荣誉诗人"
            android:textSize="@dimen/dp_25"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>