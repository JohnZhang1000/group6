<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="54dp"
        android:layout_height="54dp" />

    <TextView
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/iv_text"
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@+id/iv_text"
        android:id="@+id/iv1"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_like"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="34dp"
        android:layout_below="@+id/iv_text"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:text="赞"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginLeft="66dp"
        android:layout_below="@+id/iv_text"
        android:id="@+id/iv2"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_diss"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="98dp"
        android:layout_below="@+id/iv_text"
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:text="踩"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginLeft="126dp"
        android:layout_below="@+id/iv_text"
        android:id="@+id/iv3"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_comment"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="158dp"
        android:layout_below="@+id/iv_text"
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:text="评论"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginLeft="216dp"
        android:layout_below="@+id/iv_text"
        android:id="@+id/iv5"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_share"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="248dp"
        android:layout_below="@+id/iv_text"
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:text="分享"
        android:layout_height="wrap_content"/>
</RelativeLayout>