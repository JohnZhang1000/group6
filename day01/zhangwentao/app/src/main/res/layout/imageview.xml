<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="54dp"
        android:layout_height="54dp"/>
    <TextView
        android:layout_toRightOf="@+id/iv_header"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center_horizontal"
        android:layout_below="@id/iv_header"
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_below="@+id/tv_text"
        android:id="@+id/iv_tupian"
        android:layout_width="300dp"
        android:layout_height="466dp"/>
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/iv_tupian"
        android:id="@+id/iv_xiaotu"
        android:layout_width="34dp"
        android:layout_height="34dp"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/iv_tupian"
        android:layout_toRightOf="@+id/iv_xiaotu"
        android:id="@+id/tv_xiaozi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_like"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_like"
        android:layout_height="30dp"/>
    <TextView
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_toRightOf="@+id/iv_like"
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:text="1"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_dess"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_diss"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_toRightOf="@+id/iv_like"
        android:id="@+id/tv_diss"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:text="踩"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_comm"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_comment"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_toRightOf="@+id/iv_like"
        android:id="@+id/tv_comm"
        android:layout_width="wrap_content"
        android:textSize="24dp"
        android:text="1"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_shar"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_width="30dp"
        android:src="@drawable/icon_cell_comment"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="340dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_xiaozi"
        android:layout_toRightOf="@+id/iv_like"
        android:id="@+id/tv_shar"
        android:layout_width="wrap_content"
        android:textSize="24dp"
        android:text="分享"
        android:layout_height="wrap_content"/>
</RelativeLayout>